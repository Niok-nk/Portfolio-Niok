<style>
	.container {
		display: grid;
		justify-content: center;
		gap: 10px;
		max-width: 800px;
	}
	.title {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-between;
		.Icons {
			position: relative;
			flex-direction: row;
			width: auto;
			height: 2rem;
			gap: 20px;
			padding: 20px;
		}
	}
	.content {
		display: grid;
		justify-content: center;
		gap: 10px;
		/** grid-template-columns: 1fr 1fr 1fr; **/
		grid-template-areas: 
            "c1 c2 c2"
            "c3 c3 c4"
            "c5 c5 c4"
            "c5 c5 c4"
            "c6 c7 c7"
            "c8 c7 c7"            
            "c8 c9 c9"
            "c8 c10 c10"           
        ;
		.c10{
			
			color: #FFEED9;
			background-color: #E65F47;
			p{
				font-weight: 600;
			}

		}
		
		
	}

	.c1 {
		grid-area: c1;
	}
	.c2 {
		grid-area: c2;
	}
	.c3 {
		grid-area: c3;
		
	}
	.c4 {
		grid-area: c4;
	}
	.c5 {
		grid-area: c5;
	}
	.c6 {
		grid-area: c6;
	}
	.c7 {
		grid-area: c7;
	}
	.c8 {
		grid-area: c8;
	}
	.c9 {
		grid-area: c9;
	}
	.c10 {
		grid-area: c10;
	}
	

	.info{
		padding: 20px;
		background-color: #FFEED9;
		color: #4C5686;
		border-radius: 10px;
		p {
			line-height: 1.5;			

		}
		
	}

	.img {
		padding: 0px;
		border-radius: 10px;
		overflow: hidden;
		img {
			width: 100%;
			height: 100%;
			object-fit: cover;
			
		}
	}

	/*-----------------------Query----------------------------- */

	@media (width < 1000px) {
		.container {
			width: 100%;
		}
	}
	@media (width < 800px) {
		.title {
			.Icons {
				height: 1.8rem;
				gap: 15px;
				padding: 15px;
			}
		}
		.info {
			padding: 10px;
			border-radius: 10px;
			p {
				line-height: 1.3;
			}
		}
	}
	@media (width < 600px) {
		.title {
			.Icons {
				height: 1rem;
				gap: 10px;
				padding: 10px;
			}
		}
	}
</style>
