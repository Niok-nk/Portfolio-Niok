---
import BaseLista from "./BaseLista.astro";
interface Props {
    title: string;
    sub1: string;
    sub2: string;
    item: string;
}
const { title, sub1, sub2, item } = Astro.props;
---

<BaseLista class="acordeon">
    <li class="acordeon-item">
        <input type="checkbox" id={item} />
        <label class="row" for={item}>
            <svg viewBox="0 0 21.83 43.76" height="36" width="18px" >
                <g>
                    <path
                        class="row-1"
                        d="M0,1.69v40.39c0,.93.75,1.69,1.69,1.69h7.34c1.17,0,2.25-.66,2.77-1.71l9.71-19.41c.45-.9.44-1.95-.04-2.84L11.81,1.64c-.54-1.01-1.59-1.64-2.74-1.64H1.69C.75,0,0,.75,0,1.69Z"
                    ></path>
                </g>
            </svg>
        </label>        
        <label for={item}>
            <h5>{title}</h5>
            <p>{sub1}</p>
            <p><i>{sub2}</i></p>
        </label>

        <div class="contenido">
            <ul>
                <slot />
            </ul>
        </div>
    </li>
</BaseLista>

<style>
    .acordeon {
        display: flex;
        flex-direction: column;
        .acordeon-item {
            display: grid;
            grid-template-columns: 40px 1fr;
            align-items: center;
            padding: 10px;
        }
        .acordeon-item:hover .row-1{
            fill: var(--a3);
            transition: fill 0.3s;
        }
        .acordeon-item input[type="checkbox"]:checked + label svg .row-1{
            fill: var(--niok);
        }
        
        
    }
    

    .acordeon-item input[type="checkbox"] {
        display: none;
    }
   
    .row-1 {
        fill: #191926;
        stroke-width: 0px;
       
    }
    
    
    .acordeon-item label {
        padding: 10px;
        cursor: pointer;
        font-weight: bold;
        p {
            font-family: "barlow", sans-serif;
            font-weight: 600;
            font-size: 0.9rem;
        }        
    }

    .acordeon-item input[type="checkbox"]:checked ~ .contenido {
        max-height: 500px; /* Ajusta segÃºn sea necesario */
        
    }

    .contenido {
        display: grid;
        grid-column-end: 3;
        max-height: 0;
        overflow: hidden;
        transition:
            max-height 0.3s,
            padding 0.3s;
        li {
            margin: 10px;        
            padding: 5px;
            font-weight: 200;            
        }
    }
    h5 {
        font-family: "barlow", sans-serif;
        font-weight: 600;
        font-size: 1.19rem;
        margin: 0;
    }
