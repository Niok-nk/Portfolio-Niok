---
const {class: className, ...rest} = Astro.props;
---

<aside class={className} {...rest}> 
    <slot />
</aside>

<style>
    aside{
        display: flex;
        flex-direction: column;
        background-color: #191926;
        border-radius: 10px;
        margin: 10px;
        padding: 10px;
        gap: 10px;
        width: 1.6rem;
        height: auto;
        position: absolute;
        z-index: 2;  
        
    }
    @media (width < 600px) {
        aside{
            width: 1.2rem;
        }

    }
    
    
</style>