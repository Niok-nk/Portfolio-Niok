---
import Header from "../components/Header.astro";
import "@fontsource/barlow/200.css";
import "@fontsource/barlow/400.css";
import "@fontsource/barlow/600.css";


interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/public/favicon-nk.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>
<style is:global>
	:root{
		--niok: #ff3000;
		--a3: #7C7CBF;
	}
	@font-face {
		font-family: "Morganite";
		src: url("/fonts/Morganite-Light.ttf") format("truetype");
		font-weight: 300; /* Light */
		font-style: normal;
	}

	/* Declarar Morganite-Bold */
	@font-face {
		font-family: "Morganite";
		src: url("/fonts/Morganite-Bold.ttf") format("truetype");
		font-weight: 700; /* Bold */
		font-style: normal;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #191926;
		color: #AEAED9;
		scrollbar-width: thin;
		scrollbar-color: #3a3a5998 transparent;
		scrollbar-gutter: stable both-edges;
		
	}
	body {
		font-family: "Barlow", sans-serif;
		font-size: 16px;
		display: flex;
		flex-direction: column;
		align-items: center;
		margin: 0;
		padding: 2rem;
		
		
	}
	h1{
		font-family: 'Morganite', sans-serif;
		text-transform: uppercase;
		font-size: 5rem;
		letter-spacing: 0.1em;
		line-height: 0.9;
		margin: 10px;
		color: #cecef2;

	}
	h2{
		font-family: 'Morganite', sans-serif;
		text-transform: uppercase;
		font-size: 4rem;
		letter-spacing: 0.1em;
		line-height: 0.9;
		margin: 20px 10px; 
		color: #cecef2;

	}
	h3{
		font-family: 'Morganite', sans-serif;
		font-weight: 300;
		text-transform: uppercase;
		font-size: 3rem;
		letter-spacing: 0.2em;
		line-height: 0.9;
		margin: 10px;
		color: #cecef2;

	}
	h4{
		font-family: 'Morganite', sans-serif;
		font-weight: 300;
		text-transform: uppercase;
		font-size: 2rem;
		letter-spacing: 0.3em;
		line-height: 0.9;
		padding: 10px;
		margin: 0;
		color: #cecef2;

	}


	p{
		font-family: 'barlow', sans-serif;
		margin: 0;
		font-weight: 400;
		font-size: 1.08rem;
		line-height: 1.3;
	}
	img, svg {
		max-width: 100%;
		height: auto;
	}

/*-----------------------Query----------------------------- */

	@media (width < 800px) {
		h3{
			font-size: 2rem;
		}


	}
	@media (width < 600px) {
		h1{
			font-size: 4.5rem;
		}
		h2{
			font-size: 3.5rem;
		}
		h3{
			font-size: 1.9rem;
		}
		h4{
			font-size: 1.5rem;
		}
		p{
			font-size: 1rem;
		}


	}



	

</style>
